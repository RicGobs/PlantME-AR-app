<?xml version="1.0" encoding="utf-8"?>
<resources>

        <!-- Base application theme -->
        <style name="Theme.PlantMeCustom" parent="Theme.MaterialComponents.Light.NoActionBar">
            <!-- Customize your theme here -->
            <item name="colorPrimary">@color/white</item>
            <item name="colorPrimaryDark">@color/white</item>
            <item name="colorAccent">@color/white</item>
            <item name="android:textColor">@color/orange</item>
            <item name="android:statusBarColor">@android:color/transparent</item>
            <item name="android:navigationBarColor">@android:color/transparent</item>
            <item name="android:windowTranslucentStatus">false</item>
            <item name="android:windowTranslucentNavigation">true</item>
            <item name="buttonStyle">@style/Widget.MyApp.Button</item>
        </style>

        <!-- Custom button style -->
        <style name="Widget.MyApp.Button" parent="Widget.MaterialComponents.Button">
            <item name="android:background">?attr/selectableItemBackground</item>
            <item name="android:textColor">@color/orange</item>
            <item name="android:backgroundTint">@color/light</item>
            <item name="android:strokeColor">@color/orange</item>
        </style>


        <style name="Theme.Camera" parent="android:Theme.Material.Light.NoActionBar" />

</resources>